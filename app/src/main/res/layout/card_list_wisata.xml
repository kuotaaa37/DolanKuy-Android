<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_radius"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/card_radius"
                android:elevation="0dp"
                >

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgListWisata1"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/list_wisata_picture" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:text="4.5"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:layout_marginTop="118dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginLeft="135dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/relatif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    >



                        <TextView
                            android:id="@+id/idListWisata1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="id"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nameListWisata1"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wisata Taman Sari, Mengkhayalkan Para Putri"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/layout_lokasi"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/locationListWisataBtn1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/orange"
                                android:padding="10dp"
                                android:text="Patehan, Jogja"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="5pt" />
                        </LinearLayout>

                    <TextView
                        android:id="@+id/distanceListWisata1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/orange"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:text="4,5 KM"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </RelativeLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


</RelativeLayout>